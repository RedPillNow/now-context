{
	"compileOnSave": true,
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"lib": [
			"dom",
			"esnext"
		],
		"typeRoots": [
			"node_modules/@types"
		],
		"noImplicitAny": false,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"experimentalDecorators": true,
		"listFiles": true,
		"noEmitOnError": true,
		"declaration": true
	},
	"exclude": [
		"node_modules/**/*.*",
		"/usr/local/lib/node_modules/**/*",
		"test"
	],
	"include": [
		"**/*.ts",
		"node_modules/@polymer/**/*"
	]
}
