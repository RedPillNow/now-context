{
	"compileOnSave": true,
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"noImplicitAny": false,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"experimentalDecorators": true,
		"listFiles": true,
		"noEmitOnError": true,
		"declaration": true
	},
	"exclude": [
		"node_modules"
	],
	"include": [
		"*.ts",
		"test/*.ts",
		"test/**/*.ts",
		"bower_components/now-core/*.d.ts"
	]
}
