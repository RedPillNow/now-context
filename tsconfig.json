{
	"compileOnSave": true,
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"lib": [
			"dom",
			"es6",
			"dom.iterable",
			"scripthost"
		],
		"noImplicitAny": false,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"experimentalDecorators": true,
		"listFiles": true,
		"noEmitOnError": true
	},
	"exclude": [
		"node_modules/**/*.*",
		"/usr/local/lib/node_modules/**/*"
	],
	"include": [
		"**/*.ts",
		"test/*.ts",
		"test/**/*.ts",
		"../now-*/*.d.ts",
		"../polymer/**/*.d.ts",
		"bower_components/now-core/*.d.ts",
		"bower_components/polymer/**/*.d.ts"
	]
}
